using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace kratnos

{
    class Program
    {
        static void Main(string[] args)
        {
            int a; //chislo           

            Console.WriteLine("Insert a:");
            a = Convert.ToInt32(Console.ReadLine());
            {
                int b; // b=KRATNO3=true
                int c; // c=KRATNO7             

                //kratnost 3 (1/0)
                if (a % 3 == 0) b = 1;
                else b = 0;

                // kratnost 7 (1/0)  
                if (a % 7 == 0) c = 1;
                else c = 0;

                if ((b + c) == 2) Console.WriteLine("Kratno 3 i 7");
                else
                if ((b + c) == 0) Console.WriteLine("Ne kratno 3 i 7");
                else
                if (b == 1 && c == 0) Console.WriteLine("Kratno 3 no ne kratno 7");
                else
                if (b == 0 && c == 1) Console.WriteLine("Kratno 7 no ne kratno 3");

                {
                    bool e;
                    if (b == 1) e = true;
                    else e = false;
                }
                { bool d;
                    if (c == 1) d = true;
                    else d = false;
                }

            }
        }
    }
}
